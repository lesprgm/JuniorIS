{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pack Manifest v0 (MVP)",
  "type": "object",
  "required": [
    "pack_id",
    "version",
    "tags",
    "assets"
  ],
  "properties": {
    "pack_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["asset_id", "label", "tags"],
        "properties": {
          "asset_id": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    },
    "preview": {
      "type": "string"
    },
    "perf_meta": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
