{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorldSpec v0 (prototype-minimal)",
  "type": "object",
  "required": [
    "worldspec_version",
    "template_id",
    "seed"
  ],
  "properties": {
    "worldspec_version": {
      "type": "string"
    },
    "template_id": {
      "type": "string"
    },
    "seed": {
      "type": "integer"
    },
    "stylekit_id": {
      "type": "string"
    },
    "pack_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "placements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "asset_id", "transform" ],
        "properties": {
          "asset_id": { "type": "string" },
          "transform": { "type": "object" }
        },
        "additionalProperties": true
      }
    },
    "budgets": {
      "type": "object",
      "properties": {
        "max_props": { "type": "integer" },
        "max_texture_tier": { "type": "integer" },
        "max_lights": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "colors": {
      "type": "object",
      "properties": {
        "wall": { "type": "string" },
        "floor": { "type": "string" },
        "ceiling": { "type": "string" },
        "accent": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
